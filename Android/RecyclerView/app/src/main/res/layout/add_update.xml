<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/dialog_lay"
    android:orientation="vertical"
    android:background="#177EE7">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:textSize="20sp"
        android:text="@string/dialog_heading"
        android:textStyle="bold"
        android:textColor="#123456"
        android:id="@+id/dialog_heading"
        android:backgroundTint="@color/white"

        />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:autofillHints="name"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/dialog_contact_name"
        android:hint="@string/dialog_name"
        android:inputType="text"
        android:background="#C7D4E0"


        />
    <EditText

        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/dialog_contact_number"
        android:hint="@string/dialog_number"
android:autofillHints="phone"
        android:background="#CFD7E0"
        android:inputType="number"


        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
android:id="@+id/dialog_action"
            android:backgroundTint="#DFE9F2"
            android:text="@string/dialog_action"
            android:textStyle="bold"
            android:textColor="#1B1C1D"

            />

    </androidx.cardview.widget.CardView>


</LinearLayout>